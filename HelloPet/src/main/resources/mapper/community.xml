<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--  
 * 날짜 : 2023/03/09
 * 이름 : 김경준
 * 설명 : HelloPet 커뮤니티 페이지 기능구현
 -->
 
<mapper namespace="kr.co.hellopet.dao.CommunityDAO">

	<insert id="insertTipArticle">
		insert into `community_article` set 
			`group`= #{group}, 
			`title`= #{title}, 
			`content`= #{content}, 
			`img1`= #{img1},
			`uid`= #{uid}, 
			`regip`= #{regip}, 
			`rdate`= NOW();
	</insert>
	
	<select id="selectTipArticles" resultType="kr.co.hellopet.vo.CommunityVO">
		 select * from `community_article` 
			where `group`='tip'
			order by `no` desc
			limit #{start},10;
	</select>

	<select id="selectTipCount" resultType="int">
    	select count(`no`) from `community_article` 
    		where `group`='tip';
    </select>
    
    <select id="selectTipArticle" resultType="kr.co.hellopet.vo.CommunityVO">
    	select * from `community_article`
    		where `no`=#{no};
    </select>
	
	<update id="updateTipArticle">
		update `community_article` set 
			`title`=#{title},
			`content`=#{content},
			`rdate`=now()
			where `no`=#{no};
	</update>


	<insert id="insertTalkArticle">
		insert into `community_article` set 
			`group`= #{group}, 
			`cate`= #{cate},
			`title`= #{title}, 
			`content`= #{content}, 
			`img1`= #{img1},
			`img2`= #{img2},
			`img3`= #{img3},
			`uid`= #{uid}, 
			`regip`= #{regip}, 
			`rdate`= NOW();
	</insert>
	
	<select id="selectTalkArticles" resultType="kr.co.hellopet.vo.CommunityVO">
		 select a.*, b.nick from `community_article` as a
		 	join `pet_owner` as b on a.uid = b.uid
			where `group`='talktalk'
			and 
				<choose>
					<when test="cate == null">
					`cate`='contest2'
					</when>
					<when test="cate != null">
					`cate`=#{cate}
					</when>
				</choose>
			order by 
				<choose>
					<when test="sort == null">
					`no` desc
					</when>
					<when test="sort == 1">
					`no` desc
					</when>
					<when test="sort == 2">
					`heart` desc
					</when>
					<when test="sort == 3">
					`reply` desc
					</when>
				</choose>
			limit #{start},12;
	</select>
	
	<update id="updateTalkArticle">
		update `community_article` set 
			`title`=#{title},
			`content`=#{content},
			`rdate`=now()
			where `no`=#{no};
	</update>
	
	<select id="selectTalkArticle" resultType="kr.co.hellopet.vo.CommunityVO">
    	select * from `community_article`
    		where `no`=#{no};
    </select>
    
    <select id="selectTalkCount" resultType="int">
    	select count(`no`) from `community_article` 
    		where `group`='talk'
    		and `cate`=#{cate};
    </select>
    
    

</mapper>